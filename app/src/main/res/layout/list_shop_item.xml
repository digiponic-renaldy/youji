<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:id="@+id/btnLihat"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgv_listItem_shop"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/nama_barang"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/tv_namaBarangListItem_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_hargaBarangListItem_shop"
            android:text="@string/harga_barang"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_beliItemShop"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="@string/beli"
            android:layout_marginTop="30dp"
            android:background="@color/colorGreenSoft"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:id="@+id/layout_addToCart_adapter"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true"
                android:id="@+id/btn_minusCart_adapter"
                android:src="@drawable/icon_rouded_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_jumlahBarang_adapter"
                android:textStyle="bold"
                android:text="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageButton
                android:layout_marginRight="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/btn_addCart_adapter"
                android:src="@drawable/icon_rouded_add"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>