            <!--android:hint="Notelp Penerima"-->
            <!--android:inputType="text"-->
            <!--android:textColorHint="@color/colorGreenSoft" />-->
            <!--</android.support.design.widget.TextInputLayout>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Ringkasan Pembayaran"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <RadioButton
                    android:textColor="@color/colorGreenSoft"
                    android:text="Bayar di tempat"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:checked="true"
                    android:buttonTint="@color/colorGreenSoft"
                    android:fontFamily="@font/lato_regular"
                    android:layout_height="match_parent" />

                <!--<RadioButton-->
                    <!--android:fontFamily="@font/lato_regular"-->
                    <!--android:textColor="@color/colorGreenSoft"-->
                    <!--android:text="Transfer"-->
                    <!--android:layout_weight="1"-->
                    <!--android:clickable="false"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent" />-->
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_regular"
                android:text="Subtotal"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tvSubtotalCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/lato_bold"
                android:text="100000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_light"
                android:text="Diskon"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tvDiskonCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/lato_bold"
                android:text="0"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato_light"
                android:text="Total Harga"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tvTotalCheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/lato_bold"
                android:text="100000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_pembayaran"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button_green"
                android:text="Buat Pesanan"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>